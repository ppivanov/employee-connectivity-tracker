@page "/view-teams"
@inherits ViewTeamsClass

@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<AuthorizeView>
    <Authorized>

        @if(AuthState.IsAdmin == false)
        {
            <NoAccess />
        }
        else
        {
            <div class="view-teams">
                <div class="teams-list">
                    <table>
                        <thead>
                            <tr>
                                <td>
                                    Teams
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="filter-teams">
                                <td>
                                    <i id="search-icon" class="fas fa-search"></i>
                                    <input type="text" id="filter-users">
                                </td>
                            </tr>
                            @foreach (var team in Teams)
                            {
                                <tr class="team-summary">
                                    <td>
                                        <span class="team-name">
                                            @team.Name
                                        </span>
                                        <span class="member-count">
                                            @team.MemberNamesAndEmails.Count members
                                        </span>
                                        <span class="team-lead">
                                            @team.LeaderNameAndEmail
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="selected-team">
                    <h2>Team 1</h2>
                    <span class="team-lead">
                        <h3>Leader:</h3>
                        <p>Example User example@email.com</p>
                    </span>
                    <div class="left-half">
                        <h3>Members:</h3>
                        <div class="notification-options">
                            <h3>Notification options</h3>

                            <p>Points threshold: 1</p>
                            <p>Margin for notifications: 10%</p>
